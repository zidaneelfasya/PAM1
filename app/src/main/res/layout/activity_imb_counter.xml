<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".IMBActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Berat Badan (kg)"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textSize="16sp"
        android:inputType="numberDecimal"
        android:hint="Masukkan berat badan"
        android:elevation="4dp"
        android:translationZ="4dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tinggi Badan (cm)"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textSize="16sp"
        android:inputType="numberDecimal"
        android:hint="Masukkan tinggi badan"
        android:elevation="4dp"
        android:translationZ="4dp" />

    <Button
        android:id="@+id/bthitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval_button"
        android:textColor="@color/white"
        android:text="Hitung IMT"
        android:textSize="18sp"
        android:onClick="hitung"
        android:elevation="4dp"
        android:translationZ="4dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Besar Indeks Massa Tubuh (IMT)"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edimt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textSize="16sp"
        android:inputType="none"
        android:hint="Hasil IMT"
        android:elevation="4dp"
        android:translationZ="4dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Keterangan"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textSize="16sp"
        android:inputType="none"
        android:hint="Keterangan hasil"
        android:elevation="4dp"
        android:translationZ="4dp" />

</LinearLayout>
