<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Gunakan sebuah View sebagai separator dengan tinggi 0dp dan berat 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="452dp"
            android:layout_height="301dp"
            android:layout_marginBottom="50dp"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/backgroundjogging"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvNotesku"
            android:layout_width="323dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Olahraga Kebugaran Badan"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="62dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/btn_daily_workout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/ijoori"
        android:text="Jadwal Workout Harian"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btn_hiit_workout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/ijoori"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Jadwal Workout HIIT"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btn_senam_workout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:backgroundTint="@color/ijoori"
        android:text="Jadwal Senam"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

</LinearLayout>
