<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="208dp"
        android:layout_height="203dp"
        android:contentDescription="Connect with NFT creators easily"
        android:src="@drawable/gas" />

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step into asu Healthier Life with Lifestep"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/textViewDesc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have more details about what Lifestep does (e.g., fitness tracking, habit building, wellness tips), I can tailor the slogan more specifically to its features."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button_lifestep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start with Lifestep"
        android:background="@color/black"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        />

    
</LinearLayout>
